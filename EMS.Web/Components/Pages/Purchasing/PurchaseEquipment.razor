@page "/rotating/approved/rotate/{ID:int}"

<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Luân chuyển thiết bị</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
					<li class="breadcrumb-item"><a href="/purchasing/approved">Yêu cầu mua mới đã hoàn thành phê duyệt</a></li>
					<li class="breadcrumb-item active">Hoàn tất yêu cầu</li>
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

<div class="card">
	<div class="card-header">
		<h3 class="card-title">Hoàn tất yêu cầu</h3>
	</div>
	<EditForm OnValidSubmit="Submit" FormName="PurchaseEquipment" Model="Model">
		<DataAnnotationsValidator />
		<div class="card-body">
			<div class="row mb-3">
				<div class="col-md-6">
					<label>ID</label>
					<InputNumber class="form-control" @bind-Value="Model.RequestId" disabled="true" />
					<ValidationMessage For="() => Model.RequestId" />
				</div>
				<div class="col-md-6">
					<label>Note</label>
					<InputTextArea class="form-control" @bind-Value="Model.Note" />
					<ValidationMessage For="() => Model.Note" />
				</div>
			</div>
			
			<div class="card-footer">
				<button class="btn btn-primary mr-2" type="submit">Lưu</button>
				<a class="btn btn-secondary" href="/purchasing/approved">Trở về</a>
			</div>
		</div>
	</EditForm>
</div>
