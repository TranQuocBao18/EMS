@page "/department/update/{ID:int}"
@rendermode InteractiveServer
<PageTitle>Cập nhật Phòng/Khoa</PageTitle>


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật Phòng/Khoa</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/department">Phòng/Khoa</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Phòng/Khoa</h3>
    </div>
    <EditForm OnValidSubmit="Submit" FormName="UpdateDepartment" Model="Model">
        <DataAnnotationsValidator />
        <div class="card-body">
            <div class="form-group">
                <label> ID </label>
                <InputNumber class="form-control" @bind-Value="Model.ID" disabled="true" />
                <ValidationMessage For="() => Model.ID" />
            </div>
            <div class="form-group">
                <label> Tên phòng/khoa</label>
                <InputText class="form-control" @bind-Value="Model.DepartmentName" />
                <ValidationMessage For="() => Model.DepartmentName" />
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary mr-2" type="submit">Lưu</button>
            <a class="btn btn-secondary" href="/department">Trở về</a>
        </div>
    </EditForm>
</div>

