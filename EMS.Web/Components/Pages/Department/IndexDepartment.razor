@page "/department"

@if (DepartmentModels == null)
{
	<p>Đang tải ...</p>
}
else
{
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Quản lý Phòng/Khoa</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
						<li class="breadcrumb-item active">Phòng/Khoa</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">

					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Danh sách Phòng/Khoa</h3>
						</div>
						<!-- /.card-header -->
						<div class="card-body">
							<p>
								<a class="btn btn-primary" href="/department/create">Tạo phòng/khoa</a>

							</p>
							<table id="example1" class="table table-bordered table-striped">
								<thead>
									<tr>
										<th>ID</th>
										<th>Tên phòng/khoa</th>
										<th>Hành động</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var department in DepartmentModels)
									{
										<tr>
											<td>@department.ID</td>
											<td>@department.DepartmentName</td>
											<td>
												<a class="btn btn-secondary mr-2" href="/department/update/@department.ID">Cập nhật</a>
												<button class="btn btn-danger" @onclick="()=> { DeleteID = department.ID; Modal.Open();}">Xoá</button>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>

	

	<AppModal @ref="Modal">
		<Title>Notification</Title>
		<Body>
			Bạn có chắc là muốn xoá phòng/khoa này không?
		</Body>
		<Footer>
			<button type="button" class="btn btn-primary" style="width:80px" @onclick="HandleDelete">Có</button>
			<button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="() => Modal.Close()">Không</button>
		</Footer>
	</AppModal>
}
