@page "/rotating/create/{ID:int}"
@rendermode InteractiveServer
<PageTitle>Tạo yêu cầu luân chuyển</PageTitle>



<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Tạo Yêu cầu luân chuyển</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
					<li class="breadcrumb-item"><a href="/equipment">Thiết bị</a></li>
					<li class="breadcrumb-item active">Tạo mới yêu cầu luân chuyển</li>
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

<div class="card">
	<div class="card-header">
		<h3 class="card-title">Yêu cầu luân chuyển</h3>
	</div>
	<EditForm OnValidSubmit="Submit" FormName="CreateRotatingRequest" Model="Model">
		<DataAnnotationsValidator />
		<div class="card-body">
			<div class="row mb-3">
				<div class="col-md-6">
					<label>Thiết bị</label>
					<InputText class="form-control" @bind-Value="Equipment.EquipmentName" Disabled="true" />
					<ValidationMessage For="() => Model.EquipmentId" />
				</div>

				<div class="col-md-6">
					<label>Từ Phòng/khoa</label>
					<InputText class="form-control" @bind-Value="FromDepartment.DepartmentName" Disabled="true" />
					<ValidationMessage For="() => Model.FromDepartmentId" />
				</div>
			</div>

			<div class="row mb-3">
				<div class="col-md-6">
					<label>Đến Phòng/khoa</label>
					<InputSelect class="form-control" @bind-Value="Model.ToDepartmentId">
						<option value="">Chọn phòng ban</option>
						@foreach (var department in ToDepartments)
						{
							<option value="@department.ID">@department.DepartmentName</option>
						}
					</InputSelect>
					<ValidationMessage For="() => Model.ToDepartmentId" />
				</div>
				<div class="col-md-6">
					<label> Lý do</label>
					<InputText class="form-control" @bind-Value="Model.RequestReason" />
					<ValidationMessage For="() => Model.RequestReason" />
				</div>
			</div>
			<div class="card-footer">
				<button class="btn btn-primary mr-2" type="submit">Lưu</button>
				<a class="btn btn-secondary" href="/equipment">Trở về</a>
			</div>
		</div>
	</EditForm>
</div>
