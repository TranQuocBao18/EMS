@page "/rotating/history"
<PageTitle>Lịch sử luân chuyển</PageTitle>



@if (RotatingHistoryModels == null)
{
	<p>Đang tải ...</p>
}
else
{
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Quản lý Lịch sử luân chuyển</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
						<li class="breadcrumb-item active">Lịch sử luân chuyển</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">

					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Lịch sử luân chuyển</h3>
						</div>
						<!-- /.card-header -->
						<div class="card-body">
							<p>
								<button class="btn btn-primary" @onclick="ExportToCSV">Xuất tệp CSV</button>
							</p>
							<table id="example1" class="table table-bordered table-striped">
								<thead>
									<tr>
										<th>ID</th>
										<th>Người yêu cầu</th>
										<th>Thiết bị</th>
										<th>Ngày luân chuyển</th>
										<th>Từ Phòng/khoa</th>
										<th>Đến Phòng/khoa</th>
										<th>Người duyệt Lv2</th>
										<th>Người duyệt Lv3</th>
										<th>Hành động</th>
									</tr>
								</thead>

								<tbody>
									@foreach (var rotatingHistory in RotatingHistoryModels)
									{
										<tr>
											<td>@rotatingHistory.ID</td>
											<td>@rotatingHistory.RequestUser.Username</td>
											<td>@rotatingHistory.Equipment.EquipmentName</td>
											<td>@(rotatingHistory.RotatingDate.ToString("dd/MM/yyyy HH:mm:ss"))</td>
											<td>@rotatingHistory.FromDepartment.DepartmentName</td>
											<td>@rotatingHistory.ToDepartment.DepartmentName</td>
											<td>@rotatingHistory.ReviewerLv2.Username</td>
											<td>@rotatingHistory.ReviewerLv3.Username</td>
											<td>
												<a class="btn btn-secondary" href="/rotating/history/update/@rotatingHistory.ID">Cập nhật</a>
												<a class="btn btn-secondary" href="/rotating/history/viewrequest/@rotatingHistory.RotatingRequestId">Xem yêu cầu</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>

}
