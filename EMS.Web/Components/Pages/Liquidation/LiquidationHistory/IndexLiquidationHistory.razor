@page "/liquidation/history"
<PageTitle>Lịch sử thanh lý</PageTitle>


@if (LiquidationHistoryModels == null)
{
	<p>Đang tải ...</p>
}
else
{
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Quản lý Lịch sử thanh lý</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
						<li class="breadcrumb-item active">Lịch sử thanh lý</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">

					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Lịch sử thanh lý</h3>
						</div>
						<!-- /.card-header -->
						<div class="card-body">
							<p>

								<button class="btn btn-primary" @onclick="ExportToCSV">Xuất tệp CSV</button>
							</p>
							<table id="example1" class="table table-bordered table-striped">
								<thead>
									<tr>
										<th>ID</th>
										<th>Thiết bị</th>
										<th>Ngày thanh lý</th>
										<th>Người duyệt Lv2</th>
										<th>Người duyệt Lv3</th>
										<th>Người duyệt Lv3</th>
										<th>Ghi chú</th>
										<th>Hành động</th>
									</tr>
								</thead>

								<tbody>
									@foreach (var history in LiquidationHistoryModels)
									{
										<tr>
											<td>@history.ID</td>
											<td>@history.Equipment.EquipmentName</td>
											<td>@(history.LiquidDate.ToString("dd/MM/yyyy HH:mm:ss"))</td>
											<td>@history.ReviewerLv2.Username</td>
											<td>@history.ReviewerLv3.Username</td>
											<td>@history.Notes</td>
											<td>
												<a class="btn btn-secondary" href="/liquidation/history/update/@history.ID">Cập nhật</a>
												<a class="btn btn-secondary" href="/liquidation/history/viewrequest/@history.LiquidationRequestID">Xem yêu cầu</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>

}
